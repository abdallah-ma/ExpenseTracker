@model AccountViewModel
@{
    ViewData["Title"] = "Create";
}

<form asp-controller = "Account" asp-action="Create" >
    <div class ="form-group">

        <label class= "col-form-label" for= "Name"  >Name</label>
        <input asp-for="Name" class="form-control" value="aaa"/>
        <span asp-validation-for = "Name" class="text-danger"> </span>
    </div>

    <div class="form-group">

        <label class="col-form-label" for="Balance">Balance</label>
        <input asp-for="Balance" class="form-control" value="1"/>
        <span asp-validation-for = "Balance" class="text-danger"> </span>

    </div>


 

    <div class="form-group">
        <label class="col-form-label" for="Type">Type</label>
        <select class="form-control" asp-for="Type" >
            <option>Cash</option>
            <option>Debit</option>
        </select>

    </div>


    <br />

    <input type ="submit" value="Create" class="btn btn-primary"></input> |
    <a asp-Controller = "Account" asp-action="Index"  class="btn btn-dark">Back</a>
</form>

