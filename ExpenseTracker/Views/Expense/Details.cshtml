@model ExpenseViewModel

@{
    ViewData["Title"] = "Expense Details";
}

<div>



    <div class="form-group">
        <label class="col-form-label">Amount</label>
        <input asp-for="Amount" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label">Date</label>
        <input asp-for="Date" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label">Category</label>
        <input asp-for="Category" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label">Account Name</label>
        <input asp-for="AccountName" class="form-control" readonly />
    </div>
    

    <br />


    <a class="btn btn-dark" asp-controller="Account" asp-action="Index">Back</a>

</div>
